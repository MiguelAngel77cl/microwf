{
  "ConnectionString": "Filename=microwf.sqlite",
  "IdentityServer": {
    "Authority": "http://localhost:5000"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.RollingFile",
      "Serilog.Sinks.ColoredConsole"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "tomware.Microwf.Engine.JobQueueService": "Verbose",
        "tomware.Microwf.Engine.WorkflowProcessor": "Verbose",
        "tomware.Microwf.Engine.WorkflowEngine": "Verbose"
      }
    },
    "WriteTo": [
      {
        "Name": "ColoredConsole"
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "./logs/{Date}.log"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "Workflow Sample WebApi"
    }
  },
  "Worker": {
    "Enabled": true,
    "Interval": 5000
  },
  "Workflows": {
    "Types": [
      {
        "Type": "HolidayApprovalWorkflow",
        "Title": "Holiday",
        "Description": "Simple holiday approval process.",
        "Route": "holiday"
      },
      {
        "Type": "IssueTrackingWorkflow",
        "Title": "Issue",
        "Description": "Simple issue tracking process.",
        "Route": "issue"
      },
      {
        "Type": "StepperWorkflow",
        "Title": "Stepper",
        "Description": "Dummy workflow to test workflow processor",
        "Route": ""
      }
    ]
  }
}